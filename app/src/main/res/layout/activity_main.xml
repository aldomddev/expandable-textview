<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <br.com.amd.expandabletextview.ExpandableTextView
        android:id="@+id/theText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/long_text_1"
        app:expandActionHint ="show more"
        app:collapsedMaxLines="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSetLongText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Set long text"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/theText" />

    <Button
        android:id="@+id/btnSetLongestText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Set longest text"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnSetLongText" />

    <Button
        android:id="@+id/btnSetShortText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Set short text"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnSetLongestText" />

</androidx.constraintlayout.widget.ConstraintLayout>